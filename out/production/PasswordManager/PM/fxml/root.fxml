<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXPasswordField?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<BorderPane style="-fx-background-color: #282828;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="PM.rootController">
   <center>
      <Pane prefHeight="150.0" prefWidth="400.0">
         <children>
            <Button fx:id="btnLogn" layoutX="180.0" layoutY="96.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="40.0" minWidth="40.0" mnemonicParsing="false" onAction="#btn_login" prefHeight="40.0" prefWidth="40.0" style="-fx-background-color: #282828;" styleClass="angleleft">
               <font>
                  <Font name="Arial Bold" size="37.0" />
               </font>
               <graphic>
                  <FontIcon iconColor="#eeeeee" iconLiteral="fas-angle-right" iconSize="25" />
               </graphic>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <JFXPasswordField fx:id="lbl_password" focusColor="#c51f5d" layoutX="45.0" layoutY="60.0" prefHeight="30.0" prefWidth="310.0" promptText="Password" styleClass="textcolorwhite" stylesheets="@../css/styler.css" unFocusColor="#eeeeee">
               <font>
                  <Font name="Verdana" size="15.0" />
               </font>
            </JFXPasswordField>
            <Label fx:id="loginCheckLabel" alignment="CENTER" contentDisplay="CENTER" layoutX="28.0" layoutY="14.0" prefHeight="25.0" prefWidth="344.0" text="Enter Password:" textFill="#eeeeee">
               <font>
                  <Font name="Verdana" size="20.0" />
               </font>
            </Label>
            <Button fx:id="closeButton" layoutX="366.0" layoutY="-2.0" mnemonicParsing="false" onAction="#closeButtonOnAction" style="-fx-background-color: #282828;">
               <graphic>
                  <FontIcon iconColor="#eeeeee" iconLiteral="far-window-close" iconSize="25" />
               </graphic></Button>
         </children>
      </Pane>
   </center>
</BorderPane>
